  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "cross-env NODE_ENV=dev nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "orm:generate": "cross-env NODE_ENV=dev mikro-orm migration:create"
  },
  "dependencies": {
    "@mikro-orm/core": "^6.3.8",
    "@mikro-orm/entity-generator": "^6.3.8",
    "@mikro-orm/migrations": "^6.3.8",
    "@mikro-orm/mysql": "^6.3.8",
    "@mikro-orm/nestjs": "^6.0.2",
    "@mikro-orm/reflection": "^6.3.8",
    "@mikro-orm/sql-highlighter": "^1.0.1",
    "@nest-lab/throttler-storage-redis": "^1.0.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/mapped-types": "^2.0.5",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/platform-socket.io": "^10.4.1",
