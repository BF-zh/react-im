    "axios": "^1.7.7",
    "chalk": "4.1.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "dotenv-expand": "^11.0.6",
    "helmet": "^7.1.0",
    "helper-fns": "^2.7.0",
    "ioredis": "^5.4.1",
    "joi": "^17.13.3",
    "nestjs-pino": "^4.1.0",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "sharp": "^0.33.5",
    "socket.io": "^4.7.5",
    "socket.io-adapter": "^2.5.5",
    "swagger-stats": "^0.99.7",
